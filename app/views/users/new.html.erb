<h1>Create New User</h1>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
<br>
<br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
<br>
<br>
  <%= f.label :age %>
  <%= f.text_field :age %>
<br>
<br>
  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>
<br>
<br>
  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>
<br>
<br>
  <%= f.label :gender %>
  <%= f.radio_button :gender, 'Male' %> Male
  <%= f.radio_button :gender, 'Female' %> Female
<br>
<br>
  <%= f.label :alive %>
  <%= f.radio_button :alive, 'Living' %> Living
  <%= f.radio_button :alive, 'Deceased' %> Deceased
<br>
<br>
  <%= f.submit %>

<% end %>